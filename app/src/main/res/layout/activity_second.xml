<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/xx"
    tools:context="com.example.hp.solve.SecondActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        app:srcCompat="@drawable/s"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp" />


    <EditText
        android:id="@+id/editText7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:ems="10"
        android:background="@drawable/recta"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_marginTop="40dp"
        android:inputType="numberPassword"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/editText6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:background="@drawable/recta"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="false"
        android:hint="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColorHint="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="240dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:background="@drawable/sol"
        android:onClick="btnUserLogin_Click"
        android:text="LogIn"
        android:textColor="#ffffff"
        android:textSize="18dp" />
</RelativeLayout>

</ScrollView>
